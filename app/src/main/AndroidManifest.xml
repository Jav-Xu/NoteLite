<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.javxu.notelite">

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 允许读取Log -->
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <!--AppTheme(NoActionBar)-->
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".activity.UserActivity"
            android:label="Profile"
            android:theme="@style/AppTheme">
        </activity>
        <!--AppTheme(NoActionBar)-->


        <!--BackActivityTheme-->
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/BackActivityTheme">
        </activity>
        <activity
            android:name=".activity.ForgetActivity"
            android:theme="@style/BackActivityTheme">
        </activity>
        <activity
            android:name=".activity.WeChatActivity"
            android:theme="@style/BackActivityTheme">
        </activity>
        <!--BackActivityTheme-->


        <!--根据版本不同对Theme有默认无ActionBar和透明状态栏之分-->
        <activity
            android:name=".activity.NoteDetailActivity"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/NoteDetailActivityTheme">
        </activity>


        <service android:name=".service.AutoUpdateService"/>

    </application>

</manifest>